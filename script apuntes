/* CREAR TRIGGER PARA INSERTAR "CODIGO" AUTOMATICAMENTE*/
CREATE TRIGGER TRIG_AUTOINCREMENT
BEFORE INSERT ON medicamentos
FOR EACH ROW
BEGIN
SELECT COD_MEDICAMENTO.NEXTVAL INTO :NEW.codigo from DUAL;
END;

drop trigger TRIG_AUTOINCREMENT;

