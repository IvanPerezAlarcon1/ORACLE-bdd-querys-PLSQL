 drop table libros;

  create table libros(
  codigo number(5),
  titulo varchar2(40),
  autor varchar2(30) default 'Desconocido',
  editorial varchar2(20),
  edicion date,
  precio number(6,2),
  cantidad number(3),
  primary key(codigo)
 );
 create unique index codigo_unico on libros(codigo); /* Código para crear un indice unico e irrepetible en una tabla*/
 
 
  create table libros22(
  titulo varchar2(40),
  autor varchar2(30),
  editorial varchar2(15),
  precio number(5,2),
  cantidad number(3)
 );
