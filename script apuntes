create table usuarios (
    nombre varchar2(30) not null,
    clave varchar2(10) not null,
    primary key(nombre)
);
/*Cuando un campo es primary key, no se permite repetir el valor, lo mismo ocurre en caso de que se intente hacer un UPDATE sobre un campo, si es igual a un valor existente no se permite la acción*/

describe usuarios;

create table agenda(
    apellido varchar2(30),
    nombre varchar2(20),
    domicilio varchar2(30),
    telefono varchar2(11)
);


  drop table empleados;

 create table empleados(
  documento char(8),
  nombre varchar2(20),
  apellido varchar2(20),
  sueldo number(6,2),
  cantidadhijos number(2,0),
  fechaingreso date,
  primary key(documento)
 );
